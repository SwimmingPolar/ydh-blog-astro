{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@styles/*": ["src/styles/*"],
            "@lib/*": ["src/lib/*"],
            "@/*": ["./src/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}
